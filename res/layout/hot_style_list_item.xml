<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minHeight="150dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/display_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/air_clean" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BFC3C4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/content_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/hot_rb01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选框"
                android:textColor="#fff" />

            <Button
                android:id="@+id/order_btn01"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/my_green"
                android:text="下单"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>